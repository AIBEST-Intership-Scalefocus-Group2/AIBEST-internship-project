@model ResumeModel
@{
    ViewData["ResumeId"] = Model.Id;
}


<div class="container">
    <main role="main" class="p-3 card">
        <div class="text-center">
            <h1 class="display-4">Edit your personal CV</h1>
        </div>

        <div class="mb-3">
            <h3 class="display-4">Personal information</h3>

            <form asp-action="EditPersonalInformation" method="post">
                <div>
                    <div>
                        <label for="firstName" class="col-sm-2 col-form-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name" id="name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div>
                        <label for="firstName" class="col-sm-2 col-form-label">First name</label>
                        <input type="text" class="form-control" asp-for="FirstName" id="firstName">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>

                    <div>
                        <label for="lastName" class="form-label">Middle name</label>
                        <input type="text" class="form-control" asp-for="MiddleName" id="middleName">
                    </div>

                    <div>
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" asp-for="LastName" id="lastName">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>

                    <div>
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" asp-for="EmailAddress" id="email" required>
                        <span class="text-danger" asp-validation-for="EmailAddress"></span>
                    </div>

                    <div>
                        <label for="phone" class="form-label">Phone</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" id="phone">
                    </div>

                    <div>
                        <label for="homeAddress" class="form-label">Home address</label>
                        <input type="text" class="form-control" asp-for="Address" id="homeAddress">
                    </div>

                    <div>
                        <label for="Description" class="form-label">Description</label>
                        <input type="text" class="form-control" asp-for="Description" id="description">
                    </div>

                </div>



                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

            <partial name="_SkillsSection" model="@Model" view-data="@ViewData" />
        </div>

        <partial name="_LanguageSection" model="@Model" view-data="@ViewData" />
         <partial name="_EducationSection" model="@Model" view-data="@ViewData" />
        <partial name="_JobSection" model="@Model" view-data="@ViewData" />
</div>
