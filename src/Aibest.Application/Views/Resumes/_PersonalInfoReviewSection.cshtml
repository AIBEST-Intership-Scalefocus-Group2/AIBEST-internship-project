<div class="mb-3">
    <h3 class="display-4">Personal information</h3>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>
                    Name
                </th>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <th>
                    First name
                </th>
                <td>
                    @Model.FirstName
                </td>
            </tr>
            <tr>
                <th>
                    Middle name
                </th>
                <td>
                    @Model.MiddleName
                </td>
            </tr>
            <tr>
                <th>
                    Last name
                </th>
                <td>
                    @Model.LastName
                </td>
            </tr>
            <tr>
                <th>
                    Birthday
                </th>
                <td>
                    @Model.Birthday.ToShortDateString()
                </td>
            </tr>
            <tr>
                <th>
                    Email Address
                </th>
                <td>
                    @Model.EmailAddress
                </td>
            </tr>
            <tr>
                <th>
                    Phone number
                </th>
                <td>
                    @Model.PhoneNumber
                </td>
            </tr>
            <tr>
                <th>
                    Address
                </th>
                <td>
                    @Model.Address
                </td>
            </tr>
            <tr>
                <th>
                    Description
                </th>
                <td>
                    @Model.Description
                </td>
            </tr>
        </tbody>
    </table>
</div>