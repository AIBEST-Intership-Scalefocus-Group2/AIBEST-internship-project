@model IEnumerable<ResumeModel>

<a class="btn btn-primary" href="@Url.Action("AddResume")">Add Resume</a>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                First Name
            </th>
            <th>
                LastName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var resume in Model)
        {
            <tr>
                <td>
                    @resume.Name
                </td>
                <td>
                    @resume.FirstName
                </td>
                <td>
                    @resume.LastName
                </td>
                <td>
                    <div class="d-flex">
                        <div class="me-2">
                            <a class="btn btn-light" href="@Url.Action("Preview", new { id = resume.Id })">Preview</a>
                        </div>
                        <div class="me-2">
                            <a class="btn btn-warning" href="@Url.Action("Edit", new { id = resume.Id })">Edit</a>
                        </div>
                        <div>
                            <form method="post" asp-action="DeleteResume" onsubmit="return confirm('Do you really want to delete CV `@resume.Name?`');">
                                <input name="ResumeId" type="hidden" value="@resume.Id"/>
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

