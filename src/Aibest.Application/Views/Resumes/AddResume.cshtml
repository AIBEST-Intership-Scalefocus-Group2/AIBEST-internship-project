@model ResumeModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CVGenius</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main" class="p-3 card">
            <div class="text-center">
                <h1 class="fs-1">Create your CV</h1>
            </div>

            <form asp-action="AddResume" method="post">
                <div>
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name" id="name" placeholder="required">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="mb-3">
                    <h2 class="fs-3 mt-3 mb-2">Personal information</h2>

                    <div>
                        <div>
                            <label for="firstName" class="col-sm-2 col-form-label">First name</label> <span class="text-danger">*</span>
                            <input type="text" class="form-control" asp-for="FirstName" id="firstName" >
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>

                        <div>
                            <label for="lastName" class="form-label">Last name</label> <span class="text-danger">*</span>
                            <input type="text" class="form-control" asp-for="LastName" id="lastName" >
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>

                        <div>
                            <label for="email" class="form-label">Email Address</label> 
                            <input type="text" class="form-control" asp-for="EmailAddress" id="email" >
                            <span class="text-danger" asp-validation-for="EmailAddress"></span>
                        </div>

                        <div>
                            <label for="phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" id="phone">
                        </div>
                    </div>

                    <button class="btn btn-primary" type="submit">Add</button>
                </div>
            </form>
        </main>
    </div>

    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/site.js" asp-append-version="true"></script>
</body>
</html>